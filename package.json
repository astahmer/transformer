{
    "name": "transformer",
    "repository": {
        "type": "git",
        "url": "https://github.com/astahmer/transformer.git"
    },
    "private": true,
    "author": "Alexandre Stahmer <alexandre.stahmer@gmail.com>",
    "scripts": {
        "build": "turbo run build",
        "dev": "turbo run dev --parallel",
        "test": "turbo run test",
        "format": "prettier --write \"**/*.{ts,tsx,md}\""
    },
    "packageManager": "pnpm@6.24.0",
    "devDependencies": {
        "prettier": "^2.5.1",
        "prettier-plugin-sorted": "^2.0.0",
        "turbo": "^1.1.2",
        "typescript": "^4.5.5"
    },
    "importSort": {
        ".js, jsx, .ts, .tsx": {
            "options": {
                "ignoreTsConfig": true,
                "extraAliases": [
                    "@pastable/*"
                ]
            }
        }
    }
}
